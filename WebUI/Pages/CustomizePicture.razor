@page "/CustomizePicture"
@using Bulk_Thumbnail_Creator;
@using Bulk_Thumbnail_Creator.Interfaces;
@using Bulk_Thumbnail_Creator.PictureObjects;
@using MudBlazor.Utilities;
@using UMapx;
@using Bulk_Thumbnail_Creator.Services;
@using WebUI.Components;

@inject PicDataService PicDataService
@inject NavigationManager navmanager;
@inject ILogService Logger;

<MudGrid>
    <MudItem xs="12" sm="6">
        <PictureDataBox ImageURL="@ImageURL" PicData="@CurrentPagePictureData"></PictureDataBox>
    </MudItem>
    <MudItem xs="12" sm="6">
        <CustomizeBox ImageURL="@ImageURL" CurrentPagePictureData="CurrentPagePictureData"></CustomizeBox>
        <MudItem>
            <Download></Download>
        </MudItem>
    </MudItem>
</MudGrid>

@code
{
    [Parameter]
    public PictureData CurrentPagePictureData { get; set; }

    [Parameter]
    public string ImageURL { get; set; }

