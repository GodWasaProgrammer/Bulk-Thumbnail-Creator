{
    <Row>
        <MudTh>
            BoxParameters

            <Row>
                <MudTh>HSL values</MudTh>
                <MudTh>Height and Width</MudTh>
                <MudTh>CurrentBox</MudTh>
                <MudTh>Meme</MudTh>
                <MudTh>Text</MudTh>
